                        <Button Width="75" Content="Save" Command="{Binding ElementName=CrewManagementContent,Path=DataContext.NavCommand}" CommandParameter="CrewDetail"  Canvas.Left="130" Canvas.Top="3" FontFamily="Verdana" FontSize="14" Background="#ededef" Height="31" BorderBrush="LightGray"  >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=chkOverTime, Path=IsChecked, Mode=OneWay}" Value="true">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Text.Length, ElementName=TxtWorkHrsPort, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=TxtWorkHrsNon, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>



                                        <!--<DataTrigger Binding="{Binding Text.Length, ElementName=NCWatchKeeping, UpdateSourceTrigger=PropertyChanged}" Value="!0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=NCWatchKeepingPort, UpdateSourceTrigger=PropertyChanged}" Value="!0">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>-->

                                    </Style.Triggers>
                                    
                                    
                                    
                                </Style>
                            </Button.Style>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SaveCommand}" CommandParameter="{Binding AddNextCrewDetail}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <Button  Name="btnNext" Width="75"  Content=" Next "  HorizontalAlignment="Left" Command="{Binding ElementName=CrewManagementContent,Path=DataContext.NavCommand}" CommandParameter="OverTimeCrewDetail"  Canvas.Left="130" Canvas.Top="3" FontFamily="Verdana" FontSize="14" Background="#ededef" Height="31" BorderBrush="LightGray" >
                            <!--<TextBlock  Style="{StaticResource HeaderText1}"  HorizontalAlignment="Center" Text=" Next "/>-->
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=chkOverTime, Path=IsChecked, Mode=OneWay}" Value="true">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding OverTimeCommand}" CommandParameter="{Binding AddNextCrewDetail}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                        </Button>

                    </Canvas>

                </Grid>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
