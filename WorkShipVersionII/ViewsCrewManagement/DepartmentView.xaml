                </TextBlock>
            </Grid>
        </UniformGrid>

        <Grid Grid.Row="1" Margin="0,0,0,11" >
            <DataGrid x:Name="DepartmentGrid"  ItemsSource="{Binding Path = LoadDepartmentList,Mode=TwoWay}" BorderThickness="0" Background="WhiteSmoke" FontFamily="Verdana" FontSize="12" GridLinesVisibility="Horizontal" SelectionUnit="FullRow"  SelectionMode="Single" CanUserAddRows="False" 
                     RowHeight="25" HeadersVisibility="Column"  BorderBrush="LightGray" ColumnWidth="Auto"   AutoGenerateColumns="False"   VerticalScrollBarVisibility="Auto"   VerticalGridLinesBrush="LightGray" HorizontalGridLinesBrush="LightGray" >


               

                <DataGrid.Columns >

                    <DataGridTextColumn Binding="{Binding did,Mode=TwoWay}" Header="Id" Visibility="Collapsed"/>
                    <DataGridTextColumn Binding="{Binding DeptName,Mode=TwoWay}" FontSize="12" IsReadOnly="True" Header="Department Name" MaxWidth="980" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Margin" Value="5,0,0,0"/>
