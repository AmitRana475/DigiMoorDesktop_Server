                --><!--<Button  Grid.Column="2"  Style="{StaticResource HeaderButton1}" Margin="10" Command="{Binding ElementName=WorkHoursContent,Path=DataContext.NavCommand}" Padding="0,0,0,0" CommandParameter="RopeCroppingListView" >
