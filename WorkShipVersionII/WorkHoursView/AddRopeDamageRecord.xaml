                        <ComboBoxItem>Outboard - B</ComboBoxItem>
                        <ComboBoxItem>Zone A</ComboBoxItem>
                        <ComboBoxItem>Zone B</ComboBoxItem>
                        <ComboBoxItem>Other</ComboBoxItem>
                    </ComboBox>


                    <Canvas Grid.Column="2" Grid.Row="13" >
