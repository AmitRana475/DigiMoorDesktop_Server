                        <Canvas Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="9" Visibility="Hidden" >
                            <RadioButton x:Name="rdoWatchkeeper" IsChecked="True"  Command="{Binding Path=RadioBTNCommand}"    
   CommandParameter="{Binding ElementName=rdoWatchkeeper, Path=Content}"   GroupName="1"  Content="No  " FontFamily="Verdana" FontSize="14" Canvas.Top="7" Click="rdoWatchkeeper_Click" />
                            <RadioButton x:Name="rdoNonWatchkeeper"  Command="{Binding Path=RadioBTNCommand}"    GroupName="1" 
   CommandParameter="{Binding ElementName=rdoNonWatchkeeper, Path=Content}"  Content="Yes" Canvas.Left="50" FontFamily="Verdana" FontSize="14" Canvas.Top="7" Click="rdoNonWatchkeeper_Click" />
                        </Canvas>


                        <Canvas Name="lbldtoutofS" Visibility="Hidden" Grid.Column="2" Grid.Row="11">
                            <TextBlock Text="Date Out Of Service"   Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Top="-5" Canvas.Left="142"  />
                        </Canvas>

                        <DatePicker Visibility="Hidden" x:Name="dpOutofSer" Grid.Column="3" Grid.Row="11" CalendarStyle="{StaticResource styleCalendar}"  Text="{Binding OutofServiceDate,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"  FontFamily="Verdana" FontSize="14" VerticalContentAlignment="Center"   >
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>


                        <Canvas Name="lblReason" Visibility="Hidden" Grid.Column="2" Grid.Row="13">
                            <TextBlock Text="Reason Out Of Service"   Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Top="-5" Canvas.Left="156"  />
                        </Canvas>

                        <ComboBox x:Name="comboReOutofSer" Visibility="Hidden" DropDownClosed="comboReOutofSer_DropDownClosed"  Grid.Column="3"  Grid.Row="13" Text="--Select--"   IsEditable="True" IsReadOnly="True" ItemsSource="{Binding Path = OutofServiceReason,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" SelectedItem="{Binding Path = SRopeReasonoutofs,UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"  >


                        </ComboBox>

                        <TextBlock Text="{Binding AddMooringWinchRopeMessages.ReasonoutofServiceMessage,Mode=TwoWay}" FontFamily="Verdana" Foreground="Red" FontSize="13" Grid.Column="3" Grid.Row="12"  />


                        <Canvas Name="lblothrs"  Visibility="Hidden" Grid.Column="4" Grid.Row="13">
                            <TextBlock Text="Other Reason"   Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Top="-5" Canvas.Left="92"  />
                        </Canvas>


                        <TextBox x:Name="txtotherreason" Visibility="Hidden" Margin="25,0,0,0"  Grid.Column="4" Grid.Row="13" MaxLength="20" Text="{Binding AddMooringWinchRope.OtherReason,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalContentAlignment="Center"  >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction  Command="{Binding LostFocusCDCCommand}" CommandParameter="{Binding AddMooringWinchRope.OtherReason}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>

                        <Canvas Visibility="Hidden" Name="lbldmgob"  Grid.Column="2" Grid.Row="15">
                            <TextBlock Text="Damage Observed"   Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Top="-5" Canvas.Left="131"  />
                        </Canvas>

                        <ComboBox x:Name="comboDamageOb" Grid.Column="3" DropDownClosed="comboDamageOb_DropDownClosed"  Visibility="Hidden"  Grid.Row="15" Text="--Select--"   IsEditable="True" IsReadOnly="True" ItemsSource="{Binding Path = DamageObserved,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" SelectedItem="{Binding Path = SRopeDamageObserved,UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"  >


                        </ComboBox>

                        <Canvas Visibility="Hidden" Name="lblincident" Grid.Column="2" Grid.Row="17" >
                            <TextBlock Text="Incident Report"  Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Left="110" Canvas.Top="-5"  />
                        </Canvas>
                        <ComboBox Grid.Column="3" Grid.Row="17" Width="285" Visibility="Hidden" Text="--Select--" SelectedValuePath="Content" SelectedValue="{Binding ComboValue1}" HorizontalAlignment="Center" x:Name="comboincident" 
                                               
                                      SelectedItem="{Binding Path= ComboValue1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            <ComboBoxItem Content="Yes"></ComboBoxItem>
                            <ComboBoxItem Content="No"></ComboBoxItem>
                        </ComboBox>



                        <Canvas Visibility="Hidden" Name="lblMoorOp"  Grid.Column="2" Grid.Row="19">
                            <TextBlock Text="Mooring Operation"   Style="{StaticResource HeaderText1}" />
                            <Label Height="20" Content="*" FontFamily="Verdana" Foreground="Red" FontSize="16" Canvas.Top="-5" Canvas.Left="129"  />
                        </Canvas>

                        <ComboBox x:Name="comboMoorOp" Grid.Column="3" Visibility="Hidden"   Grid.Row="19" Text="--Select--"   IsEditable="True" IsReadOnly="True" ItemsSource="{Binding Path = DamageObserved,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" SelectedItem="{Binding Path = SRopeMooringOpertaion,UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"  >


                        </ComboBox>


                        <Canvas Grid.Column="3" Grid.Row="15" >
                            <Button x:Name="btnReset" Content="Reset" Command="{Binding ResetCommand}" CommandParameter="{Binding AddCrewDetail}"   Width="65" Style="{StaticResource HeaderButton1}" Canvas.Left="30" Canvas.Top="4"  />




                            <Button x:Name="btnSave"  Command="{Binding ElementName=WorkHoursContent,Path=DataContext.NavCommand}" CommandParameter="MooringWinchRopeTailView" Width="65" Canvas.Left="101" Style="{StaticResource HeaderButton1}" Canvas.Top="4" >
                                <TextBlock  Style="{StaticResource HeaderText1}"  HorizontalAlignment="Center" Text=" Save "/>
                                <!--Command="{Binding ElementName=CrewManagementContent,Path=DataContext.NavCommand}" CommandParameter="NextCrewDetail"-->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding SaveCommand}" CommandParameter="{Binding AddMooringWinchRope}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>


                            </Button>


                            <Button x:Name="btnCancel"   Width="65" Canvas.Left="172" Style="{StaticResource HeaderButton1}" Command="{Binding ElementName=WorkHoursContent,Path=DataContext.NavCommand}" CommandParameter="MooringWinchRopeTailView" Canvas.Top="4">
                                <TextBlock  Style="{StaticResource HeaderText1}"  HorizontalAlignment="Center" Text=" Cancel "/>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding CancelCommand}" CommandParameter="{Binding MooringWinchRopeTailView}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </Button>

                        </Canvas>

                    </Grid>

                </GroupBox>

            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</UserControl>
