                    <Canvas Grid.Column="2" Grid.Row="10" >
                        <TextBlock Text="Distance Outboard A "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt10" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="10" ></TextBlock>

                    <Canvas Grid.Column="2" Grid.Row="11" >
                        <TextBlock Text="CutYumCount A "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt11" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="11" ></TextBlock>

                    <Canvas Grid.Column="2" Grid.Row="12" >
                        <TextBlock Text="Length of Glazing A "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt12" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="12" ></TextBlock>

              
                    
                    <Canvas Name="txtB" Grid.Column="2" Grid.Row="13" >
                        <TextBlock Text="External Rating B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt13" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="13" ></TextBlock>

                    <Canvas Name="txtB1" Grid.Column="2" Grid.Row="14" >
                        <TextBlock Text="Internal Rating B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt14" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="14" ></TextBlock>


                    <Canvas Name="txtB2" Grid.Column="2" Grid.Row="15" >
                        <TextBlock Text="Average Rating B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt15" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="15" ></TextBlock>

                    <Canvas Name="txtB3" Grid.Column="2" Grid.Row="16" >
                        <TextBlock Text="Length of Abrasion B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt16" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="16" ></TextBlock>

                    <Canvas Name="txtB4" Grid.Column="2" Grid.Row="17" >
                        <TextBlock Text="Distance Outboard B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt17" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="17" ></TextBlock>

                    <Canvas Name="txtB5" Grid.Column="2" Grid.Row="18" >
                        <TextBlock Text="CutYamCount B "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt18" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="18" ></TextBlock>

                    <Canvas Name="txtB6" Grid.Column="2" Grid.Row="19" >
