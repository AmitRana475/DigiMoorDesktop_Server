                    <Canvas Name="txtB7" Grid.Column="2" Grid.Row="20" >
                        <TextBlock Text="Chafe Guard Condition "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt20" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="20" ></TextBlock>

               

                    <!--<Canvas Grid.Column="2" Grid.Row="21" >
                        <TextBlock Text="Berth exposed SeaSwell "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt21" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="21" ></TextBlock>


                    <Canvas Grid.Column="2" Grid.Row="22" >
                        <TextBlock Text="SurgingObserved "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt22" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="22" ></TextBlock>


                    <Canvas Grid.Column="2" Grid.Row="23" >
                        <TextBlock Text="Any Affect PassingTraffic "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt23" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="23" ></TextBlock>

                    <Canvas Grid.Column="2" Grid.Row="24" >
                        <TextBlock Text="Ship was continuously "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt24" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="24" ></TextBlock>

                    <Canvas Grid.Column="2" Grid.Row="25" >
                        <TextBlock Text="Any Rope Damage "  Style="{StaticResource HeaderText1}" />
                    </Canvas>
                    <TextBlock Name="txt25" FontWeight="Bold" FontSize="14" Margin="40,0,0,0" Grid.Column="3" Grid.Row="25" ></TextBlock>-->



                    <Canvas Margin="30,0,0,0"  Grid.Column="3" Grid.Row="22" >


                        <Button x:Name="btnCancel" Margin="0,0,0,0"  Width="125" Canvas.Left="0" Style="{StaticResource HeaderButton1}" Click="btnCancel_Click" Canvas.Top="0">
                            <TextBlock  Style="{StaticResource HeaderText1}"  HorizontalAlignment="Center" Text=" &lt;&lt; Back "/>



                        </Button>




                    </Canvas>



                </Grid>

            </GroupBox>


            <Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Right"  VerticalAlignment="Top"   Click="Button_Click" >
                <StackPanel>
                    <Image Height="22" Width="22"   Source="/WorkShipVersionII;component/Images/closebtnRed.png" />
                </StackPanel>
            </Button>
        </Grid>
    </ScrollViewer>
</UserControl>
