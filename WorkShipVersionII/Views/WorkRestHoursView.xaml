    <Grid Margin="0,0,10,0" x:Name = "WorkHoursContent"  DockPanel.Dock="Top"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <ContentControl Content="{Binding CurrentViewModelWorkHours}"/>
        
